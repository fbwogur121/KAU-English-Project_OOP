<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Top Navigation Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">




        <ImageButton
            android:id="@+id/btn2023"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="45dp"
            android:background="@null"
            android:src="@drawable/button_2023_unselected" />

        <ImageButton
            android:id="@+id/btn2024"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:src="@drawable/button_2024_unselected" />


        <ImageButton
            android:id="@+id/btn2025"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:src="@drawable/button_2025_unselected" />


        <ImageButton
            android:id="@+id/btn2026"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:src="@drawable/button_2026_unselected" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
