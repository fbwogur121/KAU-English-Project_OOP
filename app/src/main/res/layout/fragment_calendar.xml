<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".YourFragmentOrActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Navigation Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Menu Icon -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="Menu Button"
                android:src="@drawable/menu_icon" />
        </LinearLayout>

        <!-- 상단 탭 이미지 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnCheck"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:layout_marginEnd="12dp"
                android:src="@drawable/calendar_check_button_selected"
                android:contentDescription="Check" />

            <ImageButton
                android:id="@+id/btnRanking"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:layout_marginEnd="12dp"
                android:src="@drawable/calendar_ranking_button_unselected"
                android:contentDescription="Ranking" />

            <ImageButton
                android:id="@+id/btnMyPoint"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:src="@drawable/calendar_mypoint_button_unselected"
                android:contentDescription="My Point" />
        </LinearLayout>

        <!-- 연도 선택 이미지 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnYear2024"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="Year 2024"
                android:src="@drawable/calendar_2024_button_unselected" />

            <ImageButton
                android:id="@+id/btnYear2025"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="Year 2025"
                android:src="@drawable/calendar_2025_button_unselected" />

            <ImageButton
                android:id="@+id/btnYear2026"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="Year 2026"
                android:src="@drawable/calendar_2026_button_unselected" />
        </LinearLayout>

        <!-- CalendarView 추가 -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</layout>
