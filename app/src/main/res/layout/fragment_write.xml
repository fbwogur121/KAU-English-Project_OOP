<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/write_background">

    <!-- ScrollView로 전체 콘텐츠 감싸기 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Input Field -->
            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textSize="36sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Subtitle Input Field -->
            <EditText
                android:id="@+id/subtitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subtitle"
                android:textSize="26sp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Category Input Field -->
            <EditText
                android:id="@+id/categoryInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category"
                android:background="@drawable/text_input"
                android:padding="12dp"
                android:layout_marginBottom="26dp"/>

            <!-- Image Upload Input Field -->
            <EditText
                android:id="@+id/imageUploadInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Image Upload"
                android:background="@drawable/text_input"
                android:padding="12dp"
                android:layout_marginBottom="26dp"/>

            <!-- Etc Input Field -->
            <EditText
                android:id="@+id/etcInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Etc"
                android:background="@drawable/text_input"
                android:padding="12dp"
                android:layout_marginBottom="26dp"/>

            <!-- Message Input Field -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Message"
                android:background="@drawable/text_input"
                android:gravity="top"
                android:padding="12dp"
                android:layout_marginBottom="26dp"/>

            <!-- Submit Button -->
            <ImageButton
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/submit_button"
                android:background="@null"
                android:contentDescription="Submit Button"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

